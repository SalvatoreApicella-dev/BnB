                  </button>
            </div>    
        </div>
      </div>

      <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

      <h2>Section title</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#ID</th>
              <th>Nome</th>
              <th>Cognome</th>
              <th>Checkin</th>
              <th>Checkout</th>
              <th>Appartamento</th>
            </tr>
          </thead>
          <tbody>
            <% for (let id = 0; id < reservation.length; id++) { %>
            <% for (let guest_id = 0; guest_id < reservation[id].guests.length; guest_id++) { %>
              <tr>
              <td><%= id %></td>
              <td><%= reservation[id].guests[guest_id].firstname %></td>
              <td><%= reservation[id].guests[guest_id].lastname %></td>
              <td><%= reservation[id].checkin %></td>
              <td><%= reservation[id].checkout %></td>  
              </tr>
              <% } %>        
            <% } %>
            
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

<script>
    /* globals Chart:false, feather:false */

(function () {
  'use strict'

  feather.replace()

  // Graphs
  var ctx = document.getElementById('myChart')
  // eslint-disable-next-line no-unused-vars
  var myChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: [
