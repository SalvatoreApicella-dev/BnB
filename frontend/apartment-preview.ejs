                        </div>


                        <h4 class="name">Indirizzo: <small> <%= apartment.address.street %></small> </h4>
              
                        <p class=" center-text"><%= apartment.type_accomodation %> </p>
                    </div>
                    <!--Front card-->
    
                    <!--Back card-->
                    
                    <div class="theback">
                        <div class="my-gradient radius-back" style="margin-top: auto;" ></div>
                        <h4 class="name">Descrizione</h4>
                        <p class="textarea"><%= apartment.description %> </p>
                        
                        <div style="margin-top:30px;">

                          <a class="btn waves-effect waves-light btn-red center-absolute" href="/apartments/apartment/<%= apartment._id%>">More</a>

                        </div>
                        
                    
                    </div>
                    <!--/Back card-->
                </div>
                <div class="top waves-effect waves-light">
                    <h3><%= apartment.name %></h3>
                </div>
            </div>
    
        </div>
