<div class="container">

  <h1 class="my-4">Viaggi</h1>

  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="nav-future-tab" data-toggle="tab" href="#nav-future" role="tab" aria-controls="nav-future" aria-selected="true">Futuri</a>
      <a class="nav-item nav-link" id="nav-past-tab" data-toggle="tab" href="#nav-past" role="tab" aria-controls="nav-past" aria-selected="false">Passati</a>
    </div>
  </nav>

  <div class="tab-content my-4" id="nav-tab-content">

    <div class="tab-pane fade show active" id="nav-future" role="tabpanel" aria-labelledby="nav-future-tab">

      <% for(let i = 0; i < futureReservations.length; i++) { %>

        <% if(i % 3 === 0) { %>
        <div class="row">
        <% } %>

        <%- include('reservation-preview', {reservation: futureReservations[i]}) %> 

        <% if((i + 1) % 3 === 0 || futureReservations.length - 1 === i) { %>
        </div>
        <% } %>

      <% } %>

    </div>

    <div class="tab-pane fade" id="nav-past" role="tabpanel" aria-labelledby="nav-past-tab">

      <% for(let i = 0; i < pastReservations.length; i++) { %>

        <% if(i % 3 === 0) { %>
        <div class="row">
        <% } %>

        <%- include('reservation-preview', {reservation: pastReservations[i]}) %>

        <% if((i + 1) % 3 === 0 || pastReservations.length - 1 === i) { %>
        </div>
        <% } %>

      <% } %>

    </div>

  </div>

</div>